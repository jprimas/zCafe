<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/connect_row"
	android:orientation="horizontal" >

	<ImageView
		android:id="@+id/ivConnectDetailPhotoUrl"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_alignParentLeft="true"
		android:adjustViewBounds="true"
		android:gravity="center" />

	<LinearLayout
		android:id="@+id/llConnectDetailLayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="15dp"
		android:layout_toRightOf="@+id/ivConnectDetailPhotoUrl"
		android:background="@drawable/connect_list_msg"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/tvConnectDetailName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Small Text"
			android:textAppearance="?android:attr/textAppearanceSmall" />

		<TextView
			android:id="@+id/tvConnectDetailTime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Small Text"
			android:textAppearance="?android:attr/textAppearanceSmall" />

		<TextView
			android:id="@+id/tvConnectDetailMessage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Small Text"
			android:textAppearance="?android:attr/textAppearanceSmall" />
	</LinearLayout>

</RelativeLayout>